{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.bar.json",
  "monitor": 1,
  "font_family": "JetBrains Mono",
  "transparency_alpha": 220,
  "margin": {"horizontal": 10, "vertical": [10, -1]},
  "height": 30,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "accent": "Sapphire"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": false
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Komorebi": {
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
 
  ],
  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Cpu": {
        "enable": true
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Battery": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": false,
        "show_total_data_transmitted": true,
        "show_network_activity": true
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHourWithoutSeconds"
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    }
  ]
}
